<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginTop="25dp"
        android:layout_weight="0"
        android:gravity="center"
        android:text="Travel Photo App"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <ImageView
            android:id="@+id/pic1"
            android:layout_width="match_parent"
            android:layout_height="304dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/pic1"
            android:contentDescription="Indiagateimg"
            tools:layout_editor_absoluteY="5dp"

            tools:ignore="HardcodedText,MissingConstraints,NotSibling" />

        <ImageView
            android:id="@+id/pic2"
            android:layout_width="match_parent"
            android:layout_height="304dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/pic2"
            android:contentDescription="Lotus Temple img"
            tools:layout_editor_absoluteY="5dp"
            android:alpha="0"
            tools:ignore="HardcodedText,MissingConstraints,NotSibling" />

        <ImageView
            android:id="@+id/pic3"
            android:layout_width="match_parent"
            android:layout_height="304dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/pic3"
            android:contentDescription="Red Fort img"
            tools:layout_editor_absoluteY="5dp"
            android:alpha="0"
            tools:ignore="HardcodedText,MissingConstraints,NotSibling" />

        <ImageView
            android:id="@+id/pic4"
            android:layout_width="match_parent"
            android:layout_height="304dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/pic4"
            android:contentDescription="Akshar Dham Temple img"
            tools:layout_editor_absoluteY="5dp"
            android:alpha="0"
            tools:ignore="HardcodedText,MissingConstraints,NotSibling" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="2"
            android:background="@color/purple_200"
            android:contentDescription="Rewind Button"
            android:layout_margin="5dp"
            android:src="@android:drawable/ic_media_rew"
            tools:ignore="HardcodedText,ImageContrastCheck,RedundantDescriptionCheck"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="464dp" />

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@color/purple_200"
            android:contentDescription="Fast Button"
            android:src="@android:drawable/ic_media_ff"
            tools:ignore="HardcodedText,ImageContrastCheck,RedundantDescriptionCheck"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="464dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="3sp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="India Gate"
            tools:ignore="HardcodedText" />
    </LinearLayout>


</LinearLayout>